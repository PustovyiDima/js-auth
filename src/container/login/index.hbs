<div class="page page--background">
    <header>{{>back-button}}</header>


    <form action="" class="page__section">
        <h1 class="page__title">Вхід</h1>
        <div class="form">
            <div class="form__item">
                {{>field action='loginForm.change' label='Ел. пошта' type='email' name='email'
                placeholder='yourmail@mail.com'}}
                <span name="email" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{>field-password action='loginForm.change' label='Пароль' name='password' }}
                <span name="password" class="form__error">Помилка</span>
            </div>

        </div>
        <button onclick="loginForm.submit()" class="button button--disabled" type="button">Увійти</button>
        <span class="alert alert--disabled">Увага помилка</span>

        <span class="link__prefix">Забули пароль? <a href="/recovery" class="link">Відновити</a></span>

        <span class="link__prefix"> <a href="/signup" class="link">Створити акаунт</a></span>
    </form>
</div>